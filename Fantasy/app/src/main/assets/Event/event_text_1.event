<Event name="test_event_1">
	<EventCondition>
		<Conditions mode="or">
			<Condition type1="global" value1="0" mnemonic="==" type2="const" value2="1"/>
		</Conditions>
	</EventCondition>

	<Face>
		<face id = "hero" name="アラン" file="hero.png"/>
		<face id = "noface_hero" name="  " file="noface.png"/>
